{
  "ConnectionStrings": {
    "DefaultConnection": "Server=CRKRL-HASSANAB1;Database=TodoMS_DB;Trusted_Connection=True;TrustServerCertificate=True; MultipleActiveResultSets=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ], //Write logs to SQL Server
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=CRKRL-HASSANAB1;Database=TodoMS_DB;Trusted_Connection=True;TrustServerCertificate=True; MultipleActiveResultSets=True",
          "sinkOptionsSection": {
            "tableName": "WebApiLogs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true //default is false
          },
          "restrictedToMinimumLevel": "Error",
          "columnOptionsSection": {
            "clusteredColumnstoreIndex": false,
            "primaryKeyColumnName": "Id",
            "removeStandardColumns": [ "MessageTemplate", "Properties", "LogEvent" ],
            "id": { "nonClusteredIndex": true },
            "timeStamp": {
              "columnName": "TimestampUtc",
              "convertToUtc": true
            }
          }
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
